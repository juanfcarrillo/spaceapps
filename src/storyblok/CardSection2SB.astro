---
import { storyblokEditable, renderRichText } from '@storyblok/astro';

import Cards from '../components/sections/Cards.astro';

const { blok } = Astro.props;

interface Category {
  title: string;
  description:any;
}
---

<Cards
    {...storyblokEditable(blok)}
    title={blok.title} 
    
    description={renderRichText(blok.description)}
    categories={blok.categories.map((category: Category) => ({
        title: category.title,
        description: renderRichText(category.description),
    }))}
/>
