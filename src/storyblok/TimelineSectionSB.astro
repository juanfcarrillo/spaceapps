---
import { storyblokEditable } from "@storyblok/astro";
import type { TimelineItemProps } from "../components/molecules/timeline/Timeline.astro";
import TimelineSection from "../components/organisms/TimelineSection.astro";

const { blok } = Astro.props;

const timelineItems: TimelineItemProps[] = blok.timelineItems.map((item: any) => ({
    title: item.title,
    date: item.date,
    description: item.description,
    isActive: item.isActive,
}));
---

<TimelineSection 
    title={blok.title}
    subtitle={blok.subtitle}
    timelineItems={timelineItems}
    {...storyblokEditable(blok)}
/>
