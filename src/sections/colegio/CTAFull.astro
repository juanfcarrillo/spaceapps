---
interface Props {
    image: ImageMetadata;
    title?: string;
    body?: string;
    button?: string;
    href?: string;
}

import type { ImageMetadata } from "astro";

const { image } = Astro.props;
---

<section
    class="flex h-[100vh] gap-8 lg:gap-16 items-center justify-center text-ns-white py-8 px-8 lg:px-16 bg-gradient-to-t from-ns-primary to-ns-primary-darker flex-wrap-reverse lg:flex-nowrap lg:text-start text-center"
>
    <div
        class="flex flex-1 max-w-xl flex-col gap-6 lg:w-1/2 items-center lg:items-start"
    >
        <h1 class="w-full text-4xl font-bold">
            {Astro.props.title ?? "Space Apps"}
        </h1>
        <p class="whitespace-pre-wrap">
            {
                Astro.props.body ??
                    "Space Apps es un proyecto de código abierto para crear aplicaciones de espacios en la nube."
            }
        </p>
        <a class="bg-ns-base w-fit px-8 py-4" target="_blank" href={Astro.props.href ?? "#"}>
            {Astro.props.button ?? "Inscríbete"}
        </a>
    </div>
    <figure
        class="flex mt-12 lg:mt-0 lg:w-full flex-1 max-w-[300px] min-w-[175px] flex-col items-center justify-center gap-4 lg:items-start"
    >
        <img src={image.src} alt="Rocket" />
    </figure>
</section>
