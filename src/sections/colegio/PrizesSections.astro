---
import Prizes from "../../components/prize/Prizes.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="flex flex-col gap-8 py-8 md:px-24 md:py-16">
    <h3 class="text-center text-3xl font-bold">{t('prizes.title')}</h3>
    <p class="text-center">{t('prizes.description')}</p>
    <Prizes />
</section>
