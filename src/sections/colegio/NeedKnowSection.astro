---

import NeedKnowItems from "../../components/needknow/NeedKnowItems.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="flex flex-col gap-8 px-2 py-8 md:px-24 md:py-16">
    <h3 class="text-center text-3xl font-bold">{t('needknow.title')}</h3>
    <NeedKnowItems />
    <p class="text-center">{t('needknow.youtube')}</p>
    <div class="flex items-center justify-center h-full">
        <a href="https://www.youtube.com/channel/UCJ9WUNm4xWacbbp-qOq6iNQ" class="text-center block w-full md:w-auto">
            <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 md:px-6 border border-gray-400 rounded shadow">
                {t('needknow.subscribe')}
            </button>
        </a>
    </div>
</section>
