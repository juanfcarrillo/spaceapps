---
import Layout from "../layouts/Layout.astro";
import Rocket from "../assets/3DRocket.png";
import CTAFull from "../components/sections/CTAFull.astro";
import TimelineSections from "../components/sections/TimelineSections.astro";
import Divider from "../components/Divider.astro";
import PrizesSections from "../components/sections/PrizesSections.astro";
import TestForm from "../components/organisms/TestForm.astro";
import SchoolFormSection from "../components/sections/SchoolFormSection.astro";
---

<Layout title="Condrita Space Apps">
	<main class="w-full h-full scroll-smooth">
		<CTAFull href="#school-form" title="Condrita Space Apps" image={Rocket} />
		<TimelineSections />
		<Divider />
		<PrizesSections />
		<Divider />
		<SchoolFormSection />
	</main>
</Layout>

<script>
	const navbar = document.getElementById("navbar");
	document.addEventListener("scroll", () => {
		navbar?.classList.toggle("bg-ns-primary-darker", window.scrollY > 36);
		navbar?.classList.toggle("bg-transparent", window.scrollY < 36);
	});
</script>
