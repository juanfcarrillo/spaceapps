---

import Rocket from "../../assets/3DRocket3F.png";
import FAQ from "../../components/faq/FAQ.astro";
import CTAFull from "../../components/sections/CTAFull.astro";
import PrizesSections from "../../components/sections/PrizesSections.astro";
import ReasonsSection from "../../components/sections/ReasonsSection.astro";
import SchoolFormSection from "../../components/sections/SchoolFormSection.astro";
import SponsorsSection from "../../components/sections/SponsorsSection.astro";
import TimelineSections from "../../components/sections/TimelineSections.astro";
import WhySection from "../../components/sections/WhySection.astro";
import Layout from "../../layouts/Layout.astro";
import NeedKnowSection from "../../components/sections/NeedKnowSection.astro";
import CondritaSection from "../../components/sections/CondritaSection.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import Divider from "../../components/atoms/Divider.astro";
import CountDown from "../../components/organisms/CountDown.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('header.title')}>
	<main class="w-full h-full scroll-smooth">
		<CTAFull 
			fullHeight
			background={{from: "#105bd8", to: "#0b3d91"}}
			href="#FormSection"
			title="Condrita Campamento de Verano Espacial "
			body={`¡La aventura te espera!\nInscríbete al Campamento Espacial más grande del país.`}
			image={Rocket}
		/>
		<CountDown
			countdownDate="2024-07-11T00:00:00.000Z"
		/>
		<ReasonsSection />
		<Divider />
		<CondritaSection />
		<Divider />
		<TimelineSections />
		<Divider />
		<PrizesSections />
		<Divider />
		<WhySection 
		title={t('why.participate.title')}
		message={t('why.participate.message')}
		items={[
			{ title: t('why.parents.title'), description: t('why.parents.description'), number: "👨" },
			{ title: t('why.students.title'), description: t('why.students.description'), number: "🙋‍♂️", isFirst: true },
			{ title: t('why.teachers.title'), description: t('why.teachers.description'), number: "🧑‍🏫" },
		]}
	/>
		<Divider />
		<NeedKnowSection />
		<Divider />
		<SponsorsSection />
		<Divider />
		<SchoolFormSection />
		<Divider/>
		<FAQ />
	</main>

	<script>
		document.addEventListener("DOMContentLoaded", function() {
			const scrollButton = document.querySelector('a[href="#FormSection"]');
			if (scrollButton) {
				scrollButton.addEventListener('click', function(event) {
					event.preventDefault();
					const targetSection = document.getElementById('FormSection'); 
					if (targetSection) {
						targetSection.scrollIntoView({ behavior: 'smooth' });
					}
				});
			}
		});
	</script>
</Layout>
