---
import PrizeItem from "../prize/PrizeItem.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ul
    class="w-full flex flex-col gap-4 md:flex-row md:gap-8 justify-evenly items-center mt-8"
>
    <PrizeItem
        title={t('why.parents.title')}
        description={t('why.parents.description')}
        number="👨"
    />
    <div
        class="flex w-5/6 md:w-2/3 md:max-w-60 justify-center md:-translate-y-8 md:order-none order-first"
    >
        <PrizeItem
            title={t('why.students.title')}
            description={t('why.students.description')}
            number="🙋‍♂️"
            isFirst
        />
    </div>
    <PrizeItem
        title={t('why.teachers.title')}
        description={t('why.teachers.description')}
        number="🧑‍🏫"
    />
</ul>