---
import Form from "../organisms/SchoolForm.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
    title: string,
    description: string,
    formSrc: string
}
const {title, description, formSrc} = Astro.props

---


<section class="flex flex-col gap-8 py-8 md:px-24 md:py-16">
    <h2 class="text-center text-3xl font-bold">{title}</h2>
    <p class="text-center">{description}</p>
     <Form formSrc={formSrc}/>
</section>
