---
interface Props {
  image: string;
  name: string;
  date: string;
}

const { image, name, date } = Astro.props;
---


<div class="flex items-start space-x-2 p-2 rounded-lg w-full">
  <img src={image} alt="Author" class="w-10 h-10 rounded-full object-cover" />
  <div class="flex flex-col">
    <span class="font-semibold">{name}</span>
    <span class="text-sm text-gray-500">{date}</span>
  </div>
</div>
