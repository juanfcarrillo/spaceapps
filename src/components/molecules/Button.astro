---
import type { HTMLAttributes } from "astro/types";

interface Props {
    label?: string;
    type: HTMLAttributes<"button">["type"];
}

const { type, label } = Astro.props;
---

<button
    type={type ?? "button"}
    class="text-white focus:ring-4 focus:outline-none focus:ring-blue-300 bg-ns-base w-fit px-8 py-4"
    >{label ?? "Enviar"}</button
>
