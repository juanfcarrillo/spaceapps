    <span class="text-center text-ns-gray-dark text-6xl">{number}</span>
    <h5 class="text-center text-xl font-bold">{title}</h5>
    {
        list
            ? list.map((item) => <p class="text-sm"><span class="text-2xl">â€¢</span> {item}</p>)
